  <div class="text-purple-800 text-sm uppercase font-bold mt-4 mb-2">Latest Posts</div>
  <div class="grid md:grid-cols-2 lg:w-4/5">
  {% for post in posts %}
        <article class="my-2">
          <div class="flex flex-col items-baseline">
            <h1 class="text-xl font-semibold text-gray-800 leading-6 underline">
              <a href="{{ post.url | url }}">{{ post.data.title }}</a>
            </h1>
            <div class="flex flex-row items-center my-1">
              <div class="text-gray-300 mr-2">
                <img src="/images/calendar.svg" alt="Calendar icon">
              </div>
              <time datetime="{{ post.date | dateIso }}" class="text-gray-400 text-sm pt-1">{{ post.date | dateReadable }}</time>
            </div>
          </div>
          <div class="text-gray-500 text-sm md:text-base">
            {% excerpt post %}
          </div>
        </article>
  {% endfor %}
  </div>